{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2015", "es2015.promise", "es2016", "es2017", "esnext"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "paths": {
      "*": ["./src/types/*"]
    },
    "preserveConstEnums": true,
    "pretty": true,
    "rootDirs": ["./src"],
    "strict": true,
    "target": "es2017",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
