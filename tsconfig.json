{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "outDir": "./lib",
    "lib": ["es2015", "es2015.promise", "es2016", "es2017", "esnext"],
    "pretty": true,
    "rootDirs": ["./src"],
    "strict": true,
    "target": "es2017"
  },
  "include": ["./src/**/*"]
}
