{
  "name": "recce",
  "version": "0.0.1",
  "author": "escapace <opensource@escapace.com>",
  "license": "MPL-2.0",
  "bin": {
    "recce": "./bin/run"
  },
  "bugs": "https://github.com/escapace/recce/issues",
  "dependencies": {
    "@oclif/command": "^1.4.13",
    "@oclif/config": "^1.6.3",
    "@oclif/plugin-help": "^1.2.4"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.13.0",
    "@oclif/test": "^1.0.4",
    "@oclif/tslint": "^1.1.0",
    "@types/chai": "^4.1.2",
    "@types/lodash": "^4.14.106",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.0.0",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "prettier": "^1.11.1",
    "ts-node": "^5.0.1",
    "rimraf": "^2.6.2",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-config-escapace": "^1.1.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.8.1",
    "validate-commit": "^3.4.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    ".oclif.manifest.json",
    "/bin",
    "/lib"
  ],
  "homepage": "https://github.com/escapace/recce",
  "keywords": [],
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "recce",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "escapace/recce",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --exclude 'src/types/**/*.ts' --project tsconfig.json --fix",
      "prettier --write --parser typescript --trailing-comma none --no-semi --single-quote",
      "git add"
    ],
    "{src,test}/**/*.js": [
      "prettier --write --trailing-comma none --no-semi --single-quote",
      "git add"
    ],
    "**/*.json": [
      "prettier --write --parser json",
      "git add"
    ],
    "**/*.md": [
      "prettier --parser markdown --print-width 80",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "tempDirectory": "./node_modules/.cache/nyc_output",
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "test/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "scripts": {
    "build": "rimraf lib && tsc && oclif-dev manifest && oclif-dev readme",
    "test:travis": "npm run lint && npm run test",
    "lint": "tslint -p . -t stylish && tslint -p test -t stylish",
    "postpack": "rimraf .oclif.manifest.json",
    "prepack": "npm run build",
    "test": "tsc --noEmit -p test && mocha --forbid-only \"test/**/*.test.ts\"",
    "update-readme": "oclif-dev readme",
    "test:coverage": "nyc npm run test",
    "report-coverage": "npm run test:coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov ; rimraf coverage.lcov"
  },
  "types": "lib/index.d.ts"
}
